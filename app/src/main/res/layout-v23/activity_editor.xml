<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_editor"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.hmproductions.moneytracker.EditorActivity">

    <TextView
        android:text="Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:textSize="18sp"
        android:id="@+id/name_textView"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Switch
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/name_switch"
        android:layout_marginTop="40sp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:rotation="90"
        android:thumbTint="@android:color/holo_green_light"
        android:trackTint="@android:color/holo_orange_dark" />

    <Spinner
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="100sp"
        android:id="@+id/spinner"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:text="@string/date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="35sp"
        android:layout_below="@+id/name_editText"
        android:layout_alignParentStart="true"
        android:id="@+id/date_textView"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <Button
        android:text="@string/current_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/name_editText"
        android:layout_marginTop="25sp"
        android:layout_centerHorizontal="true"
        android:id="@+id/date_button"
        style="@style/Widget.AppCompat.Button.Borderless.Colored"
        android:textColorLink="@android:color/holo_green_light"
        android:textColor="@android:color/holo_blue_dark" />

    <TextView
        android:text="@string/cost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="100sp"
        android:layout_below="@+id/date_textView"
        android:layout_alignParentStart="true"
        android:id="@+id/cost_textView"
        android:textSize="18sp"
        android:textAppearance="@style/TextAppearance.AppCompat.Body2" />

    <TextView
        android:text="@string/toggle_text"
        android:textSize="12sp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/toggle_textView"
        android:layout_alignTop="@id/name_switch"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="@string/eg_item_name"
        android:ems="10"
        android:id="@+id/name_editText"
        android:backgroundTint="@android:color/background_dark"
        android:maxLines="1"
        android:layout_below="@+id/toggle_textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="11dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="@string/eg_25"
        android:ems="10"
        android:id="@+id/cost_editText"
        android:maxLines="1"
        android:backgroundTint="@android:color/background_dark"
        android:layout_alignBaseline="@+id/cost_textView"
        android:layout_alignBottom="@+id/cost_textView"
        android:layout_alignStart="@+id/name_editText" />

</RelativeLayout>
