<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.hmproductions.moneytracker">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher4"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.hmproductions.moneytracker.MainActivity"
            android:screenOrientation="portrait"
            android:label="Money Tracker">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.hmproductions.moneytracker.EditorActivity"
            android:label="EditorActivity"
            android:parentActivityName="com.hmproductions.moneytracker.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.hmproductions.moneytracker.EditorActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <provider
            android:name="com.hmproductions.moneytracker.data.ExtrasProvider"
            android:authorities="com.hmproductions.moneytracker"
            android:exported="false" />

        <activity
            android:name="com.hmproductions.moneytracker.InfoActivity"
            android:label="About Page"
            android:parentActivityName="com.hmproductions.moneytracker.MainActivity"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="com.hmproductions.moneytracker.InfoActivity" />

                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>></activity>
    </application>

</manifest>